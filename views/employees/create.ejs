<% include ../partials/head.ejs %>
<link rel='stylesheet' href='/stylesheets/style0.css' />
  <body>
    <% include ../partials/nav.ejs %>
    <div class="container" align="center">
      <h1>Crear Nuevo Empleado</h1>
      <form action="/employees/save" method="post">
        <table>
          <tbody>
            <tr>
              <td>Nombre</td>
              <td><input type="text" name="name" /></td>
            </tr>
            <tr>
              <td>Direccion</td>
              <td><input type="text" name="address" /></td>
            </tr>
            <tr>
              <td>Rol</td>
              <td><input type="text" name="position" /></td>
            </tr>
            <tr>
              <td>Salario</td>
              <td><input type="number" name="salary" /></td>
            </tr>
            <tr>
              <td colspan="2" align="center"><button class="btn btn-success btn-sm" type="submit" >Guardar</button>
              <a href="/employees" class="btn btn-danger btn-sm">Cancelar</a></td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </body>
